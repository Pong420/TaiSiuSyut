{
  "private": true,
  "name": "taisiusyut",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Pong <samfunghp@gmail.com>",
  "repository": {
    "url": "https://github.com/Pong420/taisiusyut"
  },
  "scripts": {
    "start": "yarn web start",
    "server": "yarn workspace @taisiusyut/server",
    "style": "yarn workspace @taisiusyut/style",
    "web": "yarn workspace @taisiusyut/web",
    "component": "node ./scripts/component.js",
    "dev": "lerna run dev --stream --parallel",
    "build": "lerna run build --stream",
    "postinstall": "lerna run postinstall --stream --parallel",
    "heroku-postbuild": "yarn build",
    "prepare": "husky install"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "cacheDirectories": [
    "node_modules",
    "packages/server/node_modules",
    "packages/styles/node_modules",
    "packages/web/node_modules",
    "packages/web/.next"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --rule 'no-console: [\"error\", { allow: [\"warn\", \"error\"] }]' --max-warnings=0",
      "prettier --ignore-path .eslintignore --write"
    ],
    "{*.json,.{babelrc,eslintrc,prettierrc}}": [
      "prettier --ignore-path .eslintignore --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{yml,md}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "engines": {
    "node": ">=12.x < 14.0"
  }
}
