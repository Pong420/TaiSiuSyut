    "mongoose-paginate-v2": "^1.3.16",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "https://github.com/Pong420/nest-cli.git#5ba47fd2c18364e6045fa6b83dd8e2429996f05b",
