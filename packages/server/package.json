    "@types/node": "^14.14.34",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/rimraf": "^3.0.0",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "jest": "26.6.3",
    "jest-extended": "^0.11.5",
    "mongodb-memory-server": "^6.9.6",
    "nestjs-ts-transform-paths": "^1.0.1",
    "supertest": "^6.1.3",
    "ts-jest": "26.5.3",
    "ts-loader": "^8.0.18",
    "ts-node": "9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
